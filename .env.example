# NEON API Configuration
NEON_API_TOKEN=your_neon_api_token_here

# Google Earth Engine
GEE_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
GEE_KEY_FILE=path/to/your/service-account-key.json

# NOAA Weather API
NOAA_API_KEY=your_noaa_api_key_here

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/wildfire_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_PATH=models/
MODEL_VERSION=v1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wildfire_prediction.log

# Cache Configuration
CACHE_DIR=data/cache/
CACHE_EXPIRY_HOURS=24

# Mapbox (for visualization)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# NEON AOP Configuration
AOP_DATA_ROOT=/path/to/private/aop/data  # Raw AOP data (not tracked in git)
AOP_OUT_ROOT=./data/processed/aop        # Processed features (can be tracked)
SAT_GRID=sentinel2_10m                   # Default grid specification (sentinel2_10m or landsat_30m)